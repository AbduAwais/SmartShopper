<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SmartShopperApp.ScannerPage"
             Title="Scan Product">

    <Grid>
        <!-- Result label -->
        <Label x:Name="resultLabel"
               Text="Scan a barcode..."
               FontSize="20"
               BackgroundColor="#80000000"
               TextColor="White"
               HorizontalOptions="Center"
               VerticalOptions="End"
               Margin="0,0,0,80" />

        <!-- Fake scan button -->
        <Button x:Name="FakeScanButton"
                Text="Simulate Scan"
                HorizontalOptions="Center"
                VerticalOptions="Center"
                IsVisible="False"
                Clicked="OnFakeScanClicked" />
    </Grid>
</ContentPage>